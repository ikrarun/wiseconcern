---
import Layout from "#/Layout.astro";
---

<script>
  import { slugify } from "utils/utils";
  const urlSearchParams = new URLSearchParams(window.location.search);
  const searchterm = urlSearchParams.get("search");
  const blogname = searchterm ? slugify(searchterm) : "";
  const errortext = document.getElementById("errortext") as HTMLHeadingElement;
  errortext.innerHTML = `The blog "${blogname}" does not exist.`;
</script>

<Layout title="Blog Does not Exist">
  <main
    class="w-full gap-2 flex flex-col grow h-full items-center justify-center"
  >
    <h1 class="text-9xl font-black">404</h1>
    <h1 id="errortext" class="text-base font-semibold px-4 py-2"></h1>
    <a
      href="/"
      class="text-base font-semibold px-4 border border-black rounded py-2"
    >
      Home
    </a>
  </main>
</Layout>
