---
import HeroSection from "@/HeroSection.astro";
import Layout from "../layouts/Layout.astro";
import type { BlogCollectionType } from "$/config";
import { getCollection } from "astro:content";
const allBlogPosts = await getCollection("blogs");
const post: BlogCollectionType[] = allBlogPosts.map((post) => post.data);
const firstPost = post[post.length - 1];
---

<Layout title="Wise Concern">
  <main class="min-h-dvh object-cover w-full flex flex-col">
    <HeroSection
      title={firstPost.title}
      description={firstPost.description}
      imgLink={"https://images.unsplash.com/photo-1557683316-973673baf926?q=80&w=1129&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"}
      url={"/blogs/" + firstPost.title}
    />
  </main>
</Layout>
