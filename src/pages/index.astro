---
import PostCard from "@/PostCard.astro";
import Layout from "../layouts/Layout.astro";
import type { BlogCollectionType } from "$/config";
import { getCollection } from "astro:content";
const allBlogPosts = await getCollection("blogs");
const post: BlogCollectionType[] = allBlogPosts.map((post) => post.data);
const firstPost = post[post.length - 1];
---

<Layout title="Wise Concern">
  <main class="w-full max-w-[900px] mx-auto px-8 grow h-full flex flex-col">
    <ul class="grid grid-cols-1 gap-4">
      <PostCard
        title={firstPost.title}
        description={firstPost.description}
        imgLink={firstPost.image}
        url={"/blogs/" + firstPost.title}
      />
      <PostCard
        title={firstPost.title}
        description={firstPost.description}
        imgLink={firstPost.image}
        url={"/blogs/" + firstPost.title}
      />
    </ul>
  </main>
</Layout>
