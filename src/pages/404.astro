---
import Layout from "@/Layout.astro";
---

<script>
  const button = document.getElementsByTagName("button");
  button[0] &&
    button[0].addEventListener("click", () => {
      window.location.reload();
    });
</script>

<Layout title="Wise Concern">
  <main
    class="flex flex-col gap-2 items-center justify-center h-full w-full grow"
  >
    <div
      class="px-28 py-6 gap-4 items-center justify-center border border-black/20 flex flex-col rounded-lg"
    >
      <h1 class="text-6xl font-bold text-gray-900">404</h1>
      <h class="text-gray-700">Error: Not Found</h>
      <div class="inline-flex items-center gap-2">
        <button
          class="rounded-md hover:bg-black/5 border border-black/20 py-2 px-4"
          >Reload</button
        >
        <a
          href="/"
          class="rounded-md border hover:bg-black/5 border-black/20 py-2 px-4"
          >Home</a
        >
      </div>
    </div>
  </main>
</Layout>
