---
import Layout from "#/Layout.astro";
const { url } = Astro.request;
const urlObj = new URL(url);
---

<Layout title="Page Not Found">
  <main class="w-full gap-2 flex flex-col grow h-full items-center">
    <h1 class="text-9xl font-black">404</h1>
    <li class="text-base font-extralight mx-4 my-2 list-disc list-inside">
      The page you are looking for does not exist.
    </li>
    <!-- <p id="errortext" class="text-base font-semibold px-4 py-2"></p> -->
    <a
      href="/"
      class="text-base uppercase font-semibold px-4 border border-black/60 bg-amber-400 rounded py-2"
    >
      Take me Home
    </a>
  </main>
</Layout>
