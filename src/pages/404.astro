---
import Layout from "#/PostLayout.astro";
---

<Layout title="Page Not Found">
  <main
    class="w-full gap-2 flex flex-col grow h-full items-center justify-center"
  >
    <h1 class="text-9xl font-black">404</h1>
    <h1 class="text-base font-semibold px-4 py-2">Page Not Found</h1>
    <a
      href="/"
      class="text-base uppercase font-semibold px-4 border border-black rounded py-2"
    >
      Take me Home
    </a>
  </main>
</Layout>
