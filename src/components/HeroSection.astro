---
import { Image } from "astro:assets";
interface Props {
  imgLink: string;
  title: string;
  description: string;
  url: string;
}
const { imgLink, title, description, url } = Astro.props;
---

<!-- full section -->
<div class="min-h-dvh grow flex flex-col justify-center w-full">
  <div
    class="flex px-8 min-h-dvh flex-col grow justify-center my-auto z-20 text-white bg-black/40 w-full"
  >
    <div class="max-w-[900px] p-2 flex flex-col gap-4 w-full mx-auto">
      <h1 class="text-xl opacity-95 font-medium">Featured</h1>
      <h1 class="text-5xl font-semibold">
        {title}
      </h1>
      <h1 class="text-xl opacity-80 font-normal">
        {description}
      </h1>
      <a class="text-sm w-fit bg-blue-700 px-4 py-2 rounded-md" href={url}
        >Read</a
      >
    </div>
  </div>
  <!-- Image -->
  <Image
    src={imgLink}
    alt="hero"
    width={1920}
    height={1080}
    loading={"eager"}
    class="h-screen absolute inset-0 w-full object-cover"
  />
</div>
